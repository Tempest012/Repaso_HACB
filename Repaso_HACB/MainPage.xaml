<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Repaso_HACB.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Numero 1"/>
        <Entry x:Name="numero1Entry" Keyboard="Numeric"/>

        <Label Text="Numero 2"/>
        <Entry x:Name="numero2Entry" Keyboard="Numeric" />

        <Button Text="Sumar" Clicked="Button_Clicked"/>

        <Label x:Name="resultadoLaber" Text="Resultado: " FontSize="Medium"/>
    </StackLayout>

</ContentPage>
